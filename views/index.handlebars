<h1>Chow Time!</h1>

<h2>Burgers to be eaten</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Consumed</h2>

<ul>
    {{#each burger}}
        {{#if devoured}}
            {{> burgers devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="new">Burger Name:</label>
        <input type="text" id="new" name="name">
    </div>

    <div class="form-group">
        <label for="devo">Eat it?</label><br>
        <input type="radio" name="devour" value="1" checked> Eat it!<br>
        <input type="radio" name="devour" value="0"> Still There
    </div>

    <button type="submit">Add Burger</button>
</form>