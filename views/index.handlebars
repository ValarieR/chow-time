<h1>Chow Time!</h1>

<h2>Burgers Devoured</h2>

<div>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burger-block devoured=true}}
            {{/if}}
        {{/each}}
    </ul>
</div>

<h2>Burgers To Be Eaten</h2>

<div>
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burger-block devoured=false}}
            {{/unless}}
        {{/each}}
    </ul>
</div>




<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>